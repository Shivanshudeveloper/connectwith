<% include ./includes/usernavigation.inc.ejs %>
<style>
.avatar {
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.avatar2 {
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
</style>
<% include ./includes/dashboard-navigation.inc.ejs %>
<div class="row mt-2 mr-1 ml-1 mb-2">
    <% include ./includes/user-profile.inc.ejs %>
    <div class="col">
        <div class="card card-body">
            <a href="/initiativeproject" class="btn btn-block btn-primary" id="initiativeProject">
                <i class="fas fa-rocket"></i>
                Initiate Project
            </a>
            <% include ./partials/messages.ejs %>
            
            <% project.forEach(function(project) { %>
                <div class="mt-2 mb-2">
                    <div class="card">
                        <div class="card-header">
                            <h5><%= project.ProjectCategory %></h5>
                        </div>
                        <div class="row ml-2 mt-2">
                        <img class="avatar2 " src="https://www.phdmedia.com/johannesburg/wp-content/uploads/sites/48/2015/05/temp-people-profile.jpg" alt="Profile Picture">
                            <p class="mt-3 ml-2 h6">
                                Andru Mani
                            </p>                        
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= project.ProjectName %></h5>
                            <p class="card-text">
                                <%= project.ProjectDescription %>
                            </p>
                            <a href="/viewproject/<%= project.ProjectID %>" class="btn btn-primary">
                                View Project
                                <i class="fas fa-fighter-jet"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
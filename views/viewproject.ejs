<% include ./includes/usernavigation.inc.ejs %>
<style>
.avatar {
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.avatar2 {
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
</style>
<% include ./includes/dashboard-navigation.inc.ejs %>
<div class="row mt-2 mr-1 ml-1 mb-2">
    <% include ./includes/user-profile.inc.ejs %>
    <div class="col">
        <div class="card mb-3">
            <div class="text-center">
                <img class="card-img-top w-50" src="https://digigrowhub.com/wp-content/uploads/2018/10/web_maintenance.png" alt="Card image cap">
            </div>
            <% project.forEach(function(project) { %>
                <div class="card-body">
                    <p class="float-right">
                        <%= project.date %>
                    </p>
                    <h5 class="card-title"><%= project.ProjectName %></h5>
                    <span class="mt-2 mb-2">
                        <a href="/message">
                            <i class="fas fa-envelope"></i>
                            Message
                        </a>
                    </span>
                    <br> <br>
                    <span class="mt-2">
                        <i class="fab fa-github"></i>
                        <a target="_blank" class="mt-3" href="<% project.ProjectRepositoryLink %>" >
                            <%=  project.ProjectRepositoryLink %>
                        </a> 
                    </span>
                    <p class="card-text mt-2">
                       <%=  project.ProjectDescription %>
                    </p>
                    <p class="card-text"><small class="text-muted">Last updated 0 mins ago</small></p>
                </div>
            <% }); %>
        </div>
    </div>
</div>
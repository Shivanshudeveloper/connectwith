<% include ./includes/navbar.inc.ejs %>
<div class="row">
    <div class="col mt-5">
        <img class="img-fluid ml-5" width="80%" src="https://cdn.dribbble.com/users/4908/screenshots/2716267/designing-rocket-800.gif" alt="" srcset="">
    </div>
    <div class="col mr-2 mt-5">
        <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <% include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="admission">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="example@example.com"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
        <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-sign-in-alt"></i>  
            Login
        </button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
</div>